{
    "version": "1.0.0",
    "name": "Finder",
    "description": "Search and pick files on the device",
    "launch_path": "/index.html",
    "icons": {
        "48": "/img/icons/48.png",
        "60": "/img/icons/60.png",
        "128": "/img/icons/128.png",
        "284": "/img/icons/284.png"
    },
    "developer": {
        "name": "Applait",
        "url": "http://applait.com"
    },
    "type": "privileged",
    "permissions": {
        "device-storage:sdcard": {
            "access": "readonly"
        }
    },
    "installs_allowed_from": [
        "*"
    ],
    "default_locale": "en",
    "activities": {
        "pick": {
            "href": "./index.html",
            "disposition": "inline",
            "returnValue": true
        }
    }
}
